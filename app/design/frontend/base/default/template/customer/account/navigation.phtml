<div class="block block-account">
    <div class="block-title">
        <strong><span><?php echo $this->__('My Account'); ?></span></strong>
    </div>
    <div class="block-content">
        <ul name="denuex">
            <?php $_links = $this->getLinks(); ?>
            <?php $_index = 1; ?>
            <?php $_count = count($_links); ?>
            <?php foreach ($_links as $_link): ?>
                <?php $_last = ($_index++ >= $_count); ?>
                <?php if ($this->isActive($_link)): ?>
                    <li class="current<?php echo ($_last ? ' last' : '') ?>"><strong><?php echo $_link->getLabel() ?></strong></li>
                <?php else: ?>

                    <?php 
                    //echo $_link->getLabel()
                    switch ( $_link->getLabel() ) {
                        case 'Address Book':
                            $lista_cuenta = 'Libreta de Direcciones';
                            break;
                        case 'Billing Agreements':
                            $lista_cuenta = 'Acuerdos de Facturación';
                            break;
                        case 'Recurring Profiles':
                            $lista_cuenta = 'Perfiles recurrentes';
                            break;
                        case 'My Product Reviews':
                            $lista_cuenta = 'Mis Opiniones del producto';
                            break;
                        case 'My Applications':
                            $lista_cuenta = 'Mis Aplicaciones';
                            break;
                        case 'My Downloadable Products':
                            $lista_cuenta = 'Mis productos descargables';
                            break;
                        case 'Newsletter Subscriptions':
                            $lista_cuenta = 'Boletín de Suscripciones';
                            break;
                            
                        default:
                            $lista_cuenta =  $_link->getLabel();
                            break;
                    }
                    ?>               

                    <li<?php echo ($_last ? ' class="last"' : '') ?>>
                        <a href="<?php echo $_link->getUrl() ?>"><?= $lista_cuenta ?></a>
                    </li>
                <?php endif; ?>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
